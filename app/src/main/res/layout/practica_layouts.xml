<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/cancel"
            app:layout_constraintRight_toLeftOf="@+id/buttonOK"
            app:layout_constraintTop_toBottomOf="@+id/textField"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/ok"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textField"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/type_here"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/textField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="170dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="170dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diseño con TableLayout"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/b1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/_1"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="176dp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/_2"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="176dp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/_3"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="176dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/_4"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="176dp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/_5"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="176dp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/_6"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="176dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/_7"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="176dp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/_8"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="176dp" />

            <Button
                android:id="@+id/b7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/_9"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="176dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/TVlinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diseño con LinearLayout"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.509" />

    <LinearLayout
        android:id="@+id/LLHKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/TVlinearLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/TVlinearLayout"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/TVlinearLayout">

        <LinearLayout
            android:id="@+id/LLVDigits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LLHrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_1"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="176dp" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_2"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="176dp" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_3"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="176dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLVrow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button15"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_4"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="176dp" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_5"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="176dp" />

                <Button
                    android:id="@+id/button17"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_6"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="176dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLVrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button18"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_7"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="176dp" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_8"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="176dp" />

                <Button
                    android:id="@+id/button20"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_9"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="176dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLVrow4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b0"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/_0" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLVOperators"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/bplus"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+" />

            <Button
                android:id="@+id/bequal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="=" />

            <Button
                android:id="@+id/bc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="C" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>